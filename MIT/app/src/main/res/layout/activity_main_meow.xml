<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Bottom.MainActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginTop="8dp"
    android:layout_marginHorizontal="4dp"
    android:padding="5dp"
    android:background="@drawable/tool"
    android:orientation="horizontal">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/tool"
        app:titleTextColor="@color/colorPrimaryDark"
        app:titleTextAppearance="@font/normal"
        app:subtitleTextColor="@color/colorPrimaryDark"
        app:subtitleTextAppearance="@font/normal"
        app:navigationIcon="@drawable/ic_baseline_toc_24"
        />
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_pic"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_weight="5"
        android:src="@drawable/profile_logo"

        />
</LinearLayout>

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="70dp"
        />
    <com.etebarian.meowbottomnavigation.MeowBottomNavigation
        android:id="@+id/bottom_nav"
        android:background="#00000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:mbn_backgroundBottomColor="@color/colorPrimaryDark"
        app:mbn_countBackgroundColor="#ff6f00"
        app:mbn_defaultIconColor="@color/white"
        app:mbn_selectedIconColor="@color/colorPrimaryDark"
        />
</RelativeLayout>